{
  "manifest_version": 3,
  "name": "Chrome Automation Extension",
  "version": "1.0",
  "description": "An extension for automating tasks in Chrome.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html"
  }
}